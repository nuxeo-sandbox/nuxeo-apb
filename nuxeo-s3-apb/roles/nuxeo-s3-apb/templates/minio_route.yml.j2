---
apiVersion: v1
kind: Route
metadata:
  labels:
    app: {{ name }}
    apb_name: '{{ apb_name }}'
    apb_plan_id: '{{ _apb_plan_id }}'
    apb_service_class_id: '{{ _apb_service_class_id }}'
    apb_service_instance_id: '{{ _apb_service_instance_id }}'
  name: {{ minio_route_name }}
  namespace: {{ namespace }}
spec:
  to:
    kind: Service
    name: {{ minio_service_name }}
  port:
    targetPort: s3
  wildcardPolicy: None
  tls:
    termination: edge
    insecureEdgeTerminationPolicy: Redirect