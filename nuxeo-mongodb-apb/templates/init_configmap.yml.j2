apiVersion: v1
kind: ConfigMap
metadata:
  name: {{ init_configmap_name }}
  namespace: {{ namespace }}
  labels:
    app: {{ app_name }}
    service: {{ app_name }}
    service_class_id: '{{ _apb_service_class_id }}'
    plan_id: '{{ _apb_plan_id }}'
    service_instance_id: '{{ _apb_service_instance_id }}'
    component: {{ component }}
data:
  on-start.sh: |
    {{ lookup('file', '../files/on-start.sh') | indent(4) }}
