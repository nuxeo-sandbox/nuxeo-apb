apiVersion: v1
kind: Secret
type: Opaque
metadata:
  name: {{ user_secret_name }}
  namespace: {{ namespace }}
  labels:
    app: {{ app_name }}
    service: {{ app_name }}
    service_class_id: '{{ _apb_service_class_id }}'
    plan_id: '{{ _apb_plan_id }}'
    service_instance_id: '{{ _apb_service_instance_id }}'
    component: {{ component }}
data:
  user: {{ auth_username | b64encode }}
  password: {{ user_password | b64encode }}
