apiVersion: policy/v1beta1
kind: PodDisruptionBudget
metadata:
  name: {{ app_name }}
  namespace: {{ namespace }}
  labels:
    app: {{ app_name }}
    service: {{ app_name }}
    service_class_id: '{{ _apb_service_class_id }}'
    plan_id: '{{ _apb_plan_id }}'
    service_instance_id: '{{ _apb_service_instance_id }}'
    component: {{ component }}
spec:
  selector:
    matchLabels:
      app: {{ app_name }}
      component: {{ component }}
{% if podDisruptionBudget is defined and (podDisruptionBudget | from_yaml) %}
{{ podDisruptionBudget | from_yaml | to_nice_yaml(indent=2) | indent(2, true) }}
{% endif %}
