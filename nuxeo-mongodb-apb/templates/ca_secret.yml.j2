apiVersion: v1
kind: Secret
type: kubernetes.io/tls
metadata:
  name: {{ ca_secret_name }}
  namespace: {{ namespace }}
  labels:
    app: {{ app_name }}
    service: {{ app_name }}
    service_class_id: '{{ _apb_service_class_id }}'
    plan_id: '{{ _apb_plan_id }}'
    service_instance_id: '{{ _apb_service_instance_id }}'
    component: {{ component }}
data:
  tls.key: {{ lookup('file', tls_cakey_path) | b64encode }}
  tls.crt: {{ tls_cacert_lookup | b64encode }}
